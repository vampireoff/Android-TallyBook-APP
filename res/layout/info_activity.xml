<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:focusable="true"
   	android:focusableInTouchMode="true"
     >
     <RelativeLayout 
         android:id="@+id/topview"
         android:layout_width="match_parent"
    	 android:layout_height="50dp"
    	 android:background="@color/blue"
    	 android:layout_alignParentTop="true"
    	 android:orientation="horizontal"
         >
         
       <LinearLayout
        android:id="@+id/save_btn"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:background="@drawable/returnbutton"
        android:orientation="horizontal" 
        >
        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:src="@drawable/save" />
    </LinearLayout>
    
       <LinearLayout
        android:id="@+id/return_view"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:gravity="center"
        android:background="@drawable/returnbutton"
        android:orientation="horizontal" 
        >
        <ImageView
            android:id="@+id/return_img"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:src="@drawable/returnicon" />
    </LinearLayout>
          
         <LinearLayout 
             android:id="@+id/top_middle"
         android:layout_width="match_parent"
    	 android:layout_height="50dp"
    	 android:layout_toLeftOf="@id/save_btn"
    	 android:layout_toRightOf="@id/return_view"
    	 android:orientation="horizontal"
    	 
         >
    <TextView 
        android:id="@+id/begin"
        android:layout_width="0dp"
   		android:layout_height="match_parent"
   		android:layout_weight="1"
   		android:gravity="center"
   		android:lines="1"
   		android:ellipsize="end"
   		android:text="开始日期"
   		android:textSize="16dp"
   		android:textColor="@drawable/datetext_selector"
        />
    
    <View 
        android:layout_width="1px"
    	android:layout_height="18dp"
    	android:layout_gravity="center"
    	android:layout_margin="10dp"
    	android:background="@color/white"
        />
         
    <TextView 
        android:id="@+id/end"
        android:layout_width="0dp"
   		android:layout_height="match_parent"
   		android:layout_weight="1"
   		android:gravity="center"
   		android:text="结束日期"
   		android:lines="1"
   		android:ellipsize="end"
   		android:textSize="16dp"
   		android:textColor="@drawable/datetext_selector"
        />
     </LinearLayout>
     
     </RelativeLayout>
     
     <RelativeLayout 
        android:id="@+id/bmoney"
        android:layout_width="match_parent"
   		android:layout_height="wrap_content"
   		android:layout_below="@id/topview"
   		android:padding="10dp"
         >
         <Button 
             android:id="@+id/alter_btn"
             android:layout_alignParentRight="true"
             android:layout_marginLeft="10dp"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_centerVertical="true"
             android:text="修改"
             android:textSize="17dp"
             android:textColor="@color/white"
             android:padding="8dp"
             android:background="@drawable/yesbtn_selector"
             android:visibility="gone"
             />
         
         <LinearLayout 
            android:layout_width="match_parent"
   			android:layout_height="wrap_content"
   			android:layout_toLeftOf="@id/alter_btn"
   			android:orientation="horizontal"
   			android:layout_centerVertical="true"
             >
             
         <TextView 
            android:layout_width="wrap_content"
   			android:layout_height="wrap_content"
   			android:text="初始金额："
   			android:textSize="16dp"
   			android:textColor="@color/blue"
             />
        <EditText 
             android:id="@+id/edit_bmoney"
             android:layout_width="match_parent"
   			 android:layout_height="wrap_content"
   			 android:textSize="16dp"
   			 android:hint="要给自己多少零花钱呢？"
   			 style="@style/editStyle_number"
             />
         </LinearLayout>
     </RelativeLayout>
     
     <View 
         android:id="@+id/view1"
         android:layout_below="@id/bmoney"
         android:layout_width="match_parent"
   		 android:layout_height="1px"
   		 android:layout_marginLeft="10dp"
   		 android:layout_marginRight="10dp"
   		 android:background="@color/blue"
         />
     
     <LinearLayout 
         android:id="@+id/objectview"
         android:layout_width="match_parent"
   		 android:layout_height="wrap_content"
   		 android:padding="10dp"
   		 android:layout_below="@id/view1"
   		 android:orientation="vertical"
         >
         
           <LinearLayout 
             android:layout_width="match_parent"
   			 android:layout_height="wrap_content"
   			 android:orientation="horizontal"
             >
             <TextView 
            android:layout_width="wrap_content"
   			android:layout_height="wrap_content"
   			android:text="消费对象："
   			android:textSize="16dp"
   			android:textColor="@color/blue"
             />
         <EditText 
             android:id="@+id/edit_object"
             android:layout_width="match_parent"
   			 android:layout_height="wrap_content"
   			 android:textSize="16dp"
   			 android:hint="钱花在哪啦？"
   			 android:singleLine="true"
             />
         </LinearLayout>
         
         <RelativeLayout 
             android:layout_width="match_parent"
   			 android:layout_height="wrap_content"
   			 android:layout_marginTop="10dp"
             >
          <Button 
             android:id="@+id/object_btn"
             android:layout_alignParentRight="true"
             android:layout_marginLeft="10dp"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_centerVertical="true"
             android:text="确定"
             android:textSize="17dp"
             android:textColor="@color/white"
             android:padding="8dp"
             android:background="@drawable/yesbtn_selector"
             />
          
          <LinearLayout 
              android:layout_width="match_parent"
   			android:layout_height="wrap_content"
   			android:orientation="horizontal"
   			android:layout_centerVertical="true"
   			android:layout_toLeftOf="@id/object_btn"
              >
             <TextView 
            android:layout_width="wrap_content"
   			android:layout_height="wrap_content"
   			android:text="金        额："
   			android:textSize="16dp"
   			android:textColor="@color/blue"
             />
         <EditText 
             android:id="@+id/edit_objectmoney"
             android:layout_width="match_parent"
   			 android:layout_height="wrap_content"
   			 android:textSize="16dp"
   			 android:hint="花了多少钱？"
   			 style="@style/editStyle_number"
             />
         </LinearLayout>
         </RelativeLayout>
         
         </LinearLayout>

     <View 
         android:id="@+id/view2"
         android:layout_below="@id/objectview"
         android:layout_width="match_parent"
   		 android:layout_height="1px"
   		 android:layout_marginLeft="10dp"
   		 android:layout_marginRight="10dp"
   		 android:background="@color/blue"
         />
     
     
     <LinearLayout 
         android:id="@+id/bottomview"
         android:layout_width="match_parent"
   		 android:layout_height="wrap_content"
   		 android:orientation="horizontal"
   		 android:padding="10dp"
   		 android:layout_alignParentBottom="true"
         >
         <LinearLayout 
             android:layout_width="0dp"
	   		 android:layout_height="wrap_content"
	   		 android:layout_weight="1"
	   		 android:gravity="center"
	   		 android:orientation="horizontal"
             >
          <TextView 
            android:layout_width="wrap_content"
   			android:layout_height="wrap_content"
   			android:text="总计："
   			android:textSize="16dp"
   			android:textColor="@color/blue"
             />
          <TextView 
              android:id="@+id/total"
            android:layout_width="wrap_content"
   			android:layout_height="wrap_content"
   			android:text="0"
   			android:textSize="16dp"
   			android:textColor="@color/red"
             />
         </LinearLayout>
         
         <View 
             android:layout_width="1px"
	   		 android:layout_height="16dp"
	   		 android:layout_gravity="center"
	   		 android:background="@color/blue"
             />
         
         <LinearLayout 
             android:layout_width="0dp"
	   		 android:layout_height="wrap_content"
	   		 android:layout_weight="1"
	   		 android:gravity="center"
	   		 android:orientation="horizontal"
             >
          <TextView 
            android:layout_width="wrap_content"
   			android:layout_height="wrap_content"
   			android:text="余额："
   			android:textSize="16dp"
   			android:textColor="@color/blue"
             />
          <TextView 
              android:id="@+id/ye"
            android:layout_width="wrap_content"
   			android:layout_height="wrap_content"
   			android:text="0"
   			android:textSize="16dp"
   			android:textColor="@color/litdeep_orange"
             />
         </LinearLayout>
     </LinearLayout>
     
     <View 
         android:id="@+id/view3"
         android:layout_above="@id/bottomview"
         android:layout_width="match_parent"
   		 android:layout_height="1px"
   		 android:layout_marginLeft="10dp"
   		 android:layout_marginRight="10dp"
   		 android:background="@color/blue"
         />
     
     <ListView 
        android:id="@+id/infolist"
        android:layout_width="match_parent"
    	android:layout_height="match_parent"
    	android:paddingLeft="10dp"
    	android:paddingRight="10dp"
    	android:cacheColorHint="#00000000"
    	android:listSelector="#00000000"
    	android:scrollbarStyle="outsideOverlay"
    	android:dividerHeight="1px"
    	android:layout_below="@id/view2"
    	android:layout_above="@id/view3"
        ></ListView>
</RelativeLayout>
